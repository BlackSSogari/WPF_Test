<Window x:Class="FileListMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FileListMaker" Height="350" Width="525" ResizeMode="NoResize">
    <Grid>
        <Button Content="Folder" Height="23" HorizontalAlignment="Left" Margin="416,12,0,0" Name="BtnSelectFolder" VerticalAlignment="Top" Width="75" Click="BtnSelectFolder_Click" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBoxFolderPath" VerticalAlignment="Top" Width="398" />
        <ListBox Height="222" HorizontalAlignment="Left" Margin="12,41,0,0" Name="listBoxFileList" VerticalAlignment="Top" Width="479" Background="#FFF0F0F0" DisplayMemberPath="FilePath" />
        <Button Content="Run" Height="23" HorizontalAlignment="Left" Margin="416,276,0,0" Name="BtnRun" VerticalAlignment="Top" Width="75" Click="BtnRun_Click" />
        <Button Content="Reset" Height="23" HorizontalAlignment="Left" Margin="12,276,0,0" Name="BtnResetList" VerticalAlignment="Top" Width="75" Click="BtnResetList_Click" />
        <Button Content="Save" Height="23" HorizontalAlignment="Left" Margin="335,276,0,0" Name="BtnSave" VerticalAlignment="Top" Width="75" Click="BtnSave_Click" />
    </Grid>
</Window>
